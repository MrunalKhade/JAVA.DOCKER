pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/MrunalKhade/JAVA.DOCKER.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("mrunalkhade/javaapp:latest")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry(credentialsId: 'dockerhub-cred', toolName: 'docker') {
                    script {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}

